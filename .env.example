# App Basis
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.tld
NEXTAUTH_URL=https://your-domain.tld
NEXTAUTH_SECRET=__SET_IN_PRODUCTION__

# DB
POSTGRES_HOST=app-db
POSTGRES_PORT=5432
POSTGRES_DB=sigmacode
POSTGRES_USER=postgres
POSTGRES_PASSWORD=__SET_IN_PRODUCTION__
DATABASE_URL=postgresql://postgres:__SET_IN_PRODUCTION__@app-db:5432/sigmacode

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=__SET_IN_PRODUCTION__

# Dify
DIFY_API_URL=http://dify-api:5001
DIFY_API_KEY=__SET_IN_PRODUCTION__

# SIGMAGUARD (Superagent Firewall)
SUPERAGENT_URL=http://sigmaguard:8000
SUPERAGENT_API_KEY=__SET_IN_PRODUCTION__
# Für kostenlosen Betrieb standardmäßig deaktiviert
FIREWALL_ENABLED=false
FIREWALL_MODE=off

# Kong
DOMAIN=your-domain.tld
# Admin nur intern, kein Wert nötig in PROD

# Vault (non-dev)
VAULT_ADDR=http://vault:8200
# VAULT_ROOT_TOKEN NICHT im Repo – in Server/CI Secrets setzen

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=__SET_IN_PRODUCTION__

# Elasticsearch (wenn Security on)
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=__SET_IN_PRODUCTION__

# Stripe (falls aktiv)
STRIPE_SECRET_KEY=__SET_IN_PRODUCTION__
STRIPE_WEBHOOK_SECRET=__SET_IN_PRODUCTION__
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=__SET_IN_PRODUCTION__

# Certbot/Cloudflare (NICHT im Repo – als Secret auf Server)
CERTBOT_EMAIL=ops@your-domain.tld
# CLOUDFLARE_API_TOKEN kommt als Docker Secret (./secrets/cloudflare_api_token.txt)